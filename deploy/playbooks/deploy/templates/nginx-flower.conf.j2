upstream flower_{{ env }} {
  server {{ _env_combined.ASISTIA_REDIS_HOST }}:{{ _env_combined.ASISTIA_CELERY_PORT }} weight=5 max_fails=3 fail_timeout=30s;
}

server {
  listen 80;
  server_name {{ flower_website_url }};
  access_log {{ nginx_log_path }}/flower-{{ env }}-access.log;
  error_log {{ nginx_log_path }}/flower-{{ env }}-error.log;

  location /.well-known/ {
    root /usr/share/nginx/html;
  }

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_read_timeout 300s;
    proxy_pass http://flower_{{ env }};
  }
}
